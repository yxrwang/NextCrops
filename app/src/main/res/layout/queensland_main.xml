<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sf="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg1"/>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.arvis.nextcrops.ui.queensland.QueensLandDashBoard"
            android:id="@+id/queensland_dashboard_fragment"/>


    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/burger_menu_nav">

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:name="com.arvis.nextcrops.ui.queensland.QueensLandBurgerMenu"/>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>